@model TaskManagementSystem.Models.Task

<h1>Delete Task</h1>

<h3>Are you sure you want to delete this task?</h3>
<div>
    <h4>@Model.Name_Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Assignee</dt>
        <dd class="col-sm-10">@Model.Assignee</dd>

        <dt class="col-sm-2">Deadline</dt>
        <dd class="col-sm-10">@Model.Deadline.ToShortDateString()</dd>

        <dt class="col-sm-2">Priority</dt>
        <dd class="col-sm-10">@Model.Priority</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
