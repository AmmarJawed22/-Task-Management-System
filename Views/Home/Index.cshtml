

@model IEnumerable<TaskManagementSystem.Models.Task>
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <h1>Task List</h1>

    <p>
        <a href="@Url.Action("AddTask", "Home")" class="btn btn-primary">Create New Task</a>
    </p>

    <form method="get">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>Status</label>
                <input type="text" name="status" class="form-control" @* value=@Request.Query *@ ["status"]" />
            </div>
            <div class="form-group col-md-3">
                <label>Assignee</label>
                <input type="text" name="assignee" class="form-control"@* value=@Request.Query  *@ ["assignee"]" />
            </div>
            <div class="form-group col-md-3">
                <label>Deadline</label>
                <input type="date" name="deadline" class="form-control" @* value=@Request.Query *@ ["deadline"]" />
            </div>
            <div class="form-group col-md-3">
                <button type="submit" class="btn btn-primary" style="margin-top: 31px;">Filter</button>
            </div>
        </div>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Assignee</th>
                <th>Deadline</th>
                <th>Priority</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Task in Model)
            {
                <tr>
                    <td>@Task.Name_Title</td>
                    <td>@Task.Description</td>
                    <td>@Task.Assignee</td>
                    <td>@Task.Deadline.ToShortDateString()</td>
                    <td>@Task.Priority</td>
                    <td>@Task.Status</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@Task.Id" class="btn btn-warning">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@Task.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

</body>
</html>


